{
  // VSCode 字體大小
  "editor.fontSize": 18,
  // 行高
  "editor.lineHeight": 26,
  // VSCode 空白字體大小
  "editor.tabSize": 2,
  // VSCode 存檔自動排版
  "editor.formatOnSave": true,
  // code 存檔時排版
  "editor.codeActionsOnSave": {
    // 依照 eslint 規則排坂
    "source.fixAll.eslint": true
  },
  // VSCode 貼上 Code 時會自動排版
  "editor.formatOnPaste": true,
  "editor.rulers": [80, 120],
  "editor.wordWrapColumn": 120,
  // VSCode 字動換行
  "editor.wordWrap": "wordWrapColumn",
  // VSCode 顯示縮排線
  "editor.renderIndentGuides": true,
  // 控制編輯器應如何轉譯空白字元
  "editor.renderWhitespace": "all",
  // VSCode 要求設定，當程式碼行數太多就隱藏部分
  "editor.maxTokenizationLineLength": 20000,
  // 控制總管是否須在透過垃圾桶刪除檔案時要求確認
  "explorer.confirmDelete": false,
  // 控制總管是否須要求確認，以透過拖放來移動檔案和資料夾
  "explorer.confirmDragAndDrop": false,
  // VSCode 存檔時刪掉結尾多餘的行數
  "files.trimFinalNewlines": true,
  // VSCode 存檔時會在結尾插入一行
  "files.insertFinalNewline": true,
  // VSCode MarkDown 使用 VSCode 開啟
  "files.defaultLanguage": "markdown",
  // 不會自動存檔
  "files.autoSave": "off",
  "window.zoomLevel": 0,
  // 指定的語法定義設定檔，或透過特定規則使用自己的設定檔
  "emmet.syntaxProfiles": {
    "vue-html": "html",
    "vue": "html"
  },
  // 關閉 javascript 默認排版
  "javascript.format.enable": false,
  // 啟用/停用 JavaScript 驗證
  "javascript.validate.enable": true,
  // 關閉 json 默認排版
  "json.format.enable": false,
  // 完成 CSS 屬性時在行尾插入分號
  "css.completion.completePropertyWithSemicolon": true,
  // 關閉 html 默認排版
  "html.format.enable": false,
  // 每行字元數的上限
  "html.format.wrapLineLength": 120,
  // tag 的屬性格式
  "html.format.wrapAttributes": "force-aligned",
  // eslint 簡查的程式語言
  "eslint.validate": ["javascript", "html", "vue"],
  // Prettier 使用雙引號
  "prettier.singleQuote": false,
  // Prettier 結尾分號
  "prettier.semi": true,
  // Prettier 尾隨逗號
  "prettier.trailingComma": "es5",
  // Prettier JSON 首尾空白
  "prettier.bracketSpacing": true,
  // vuetur 使用
  "vetur.format.styleInitialIndent": false,
  "vetur.format.scriptInitialIndent": false,
  "vetur.format.defaultFormatter.js": "prettier",
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  // LiveServer 改 port
  "liveServer.settings.port": 8080,
  // LiveServer 開啟時的瀏覽器 chrome
  "liveServer.settings.CustomBrowser": "chrome",
  // LiveServer 開啟時不再提醒
  "liveServer.settings.donotShowInfoMsg": true,
  // LiveServer 避免 json-sarver 改變 json 導致 liverServer 更新瀏覽器
  "liveServer.settings.ignoreFiles": [
    ".vscode/**",
    "**/*.scss",
    "**/*.sass",
    "**/*.ts",
    "**/*.json"
  ],
  // Live Sass Compiler 設定，輸出的檔案
  "liveSassCompile.settings.formats": [
    {
      // 未壓縮的標準 CSS 格式
      // expanded 手打的樣子
      "format": "expanded",
      "extensionName": ".css",
      "savePath": "/style"
    },
    {
      // 壓縮的 CSS 格式，適合上線使用
      "format": "compressed",
      "extensionName": ".min.css",
      "savePath": "/dist/style"
    }
  ],
  // Live Sass Compiler 設定，排除的路徑，避免轉到別的檔案
  "liveSassCompile.settings.excludeList": ["**/node_modules/**", ".vscode/**"],
  // Live Sass Compiler 設定，CSS Map 如果模組化可以改為 false，用途，把 Sass 和 Css 做行數對應
  "liveSassCompile.settings.generateMap": true,
  // Live Sass Compiler 設定，樣式前綴
  "liveSassCompile.settings.autoprefix": [
    // 瀏覽器市占率大於 1% 的瀏覽器才加上樣式前綴
    "> 1%",
    // 瀏覽器最新的兩個版本
    "last 2 versions"
  ],
  // Blueprint 使用 VSCod 時自動產生模版的路徑
  "blueprint.templatesPath": [
    "./blueprint-templates",
    "../blueprint-templates",
    "./.vscode/blueprint-templates"
  ],
  "timeline.excludeSources": ["git-history"]
}
